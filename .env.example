# ============================================
# AI Learning Mentor Bot - Environment Config
# ============================================
# Copy this file to .env and fill in your values

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord Server (Guild) ID
GUILD_ID=123456789012345678

# Channel IDs (create these channels in your server)
# STATE_CHANNEL - Private channel for bot state storage (only bot should see)
STATE_CHANNEL_ID=123456789012345678

# LEARNING_CHANNEL - Public channel where users post learning logs
LEARNING_CHANNEL_ID=123456789012345678

# DASHBOARD_CHANNEL - Channel for stats dashboard
DASHBOARD_CHANNEL_ID=123456789012345678

# DAILY_THREADS_CHANNEL - Channel where daily threads are created
DAILY_THREADS_CHANNEL_ID=123456789012345678

# User IDs to track (comma-separated, exactly 2 users)
USER_IDS=123456789012345678,234567890123456789

# Google Gemini API Key (from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, defaults to gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# Timezone (optional, defaults to Asia/Kathmandu)
TIMEZONE=Asia/Kathmandu
